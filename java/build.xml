<project name="basic build file for ANT" default="all">
<!-- Initialize/ Clean up directory for build  -->
<target name="clean">
<delete dir="build"/>
</target>
<!--  Compile  -->
<target name="compile">
<mkdir dir="build/classes"/>
<javac srcdir="src/" destdir="build/classes"/>
<!-- <javac srcdir="." destdir="build/classes"/> -->
</target>
<!--  make jar file from compiled classes -->
<target name="jar">
<mkdir dir="build/jar"/>
<jar destfile="build/jar/Groups.jar" basedir="build/classes">
<manifest>
<attribute name="Main-Class" value="groups.Groups"/>
</manifest>
</jar>
</target>
<!--  run execute jar file   -->
<target name="run">
<java jar="build/jar/Groups.jar" fork="true"/>
</target>
<!--  run all build routines  -->
<target name="all" depends="clean">
<antcall target="compile"/>
<antcall target="jar"/>
<antcall target="run"/>
<!--         <antcall target="deploy"/> -->
</target>
</project>
